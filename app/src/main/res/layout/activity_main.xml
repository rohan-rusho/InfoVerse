            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 7: Sports -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
