<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="22dp"
        android:paddingBottom="80dp"
        android:gravity="center_horizontal">

        <!-- Title Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            cardView:cardCornerRadius="30dp"
            cardView:cardElevation="14dp"
            cardView:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="32dp"
                android:background="@drawable/card_bg">

                <ImageView
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:src="@drawable/ic_sun"
                    android:layout_gravity="center_horizontal"
                    android:padding="12dp"
                    cardView:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Sun"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Info Cards -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Definition"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#AEEA00"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Sun is a giant ball of hot, glowing gases at the center of our solar system. It provides light and heat to Earth."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Key Facts"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• The Sun is a star, not a planet.\n• It’s 109 times wider than Earth.\n• Its gravity holds the solar system together.\n• Made mostly of hydrogen and helium."
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Why the Sun Matters"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Sun gives us energy for life, weather, and climate. Without the Sun, Earth would be dark and cold."
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fun Facts"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• The Sun is about 4.6 billion years old.\n• It takes 8 minutes for sunlight to reach Earth.\n• The Sun’s core is 15 million °C.\n• Sunspots are cooler, dark areas on the Sun."
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Call to Action -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            cardView:cardCornerRadius="20dp"
            cardView:cardElevation="6dp"
            cardView:cardBackgroundColor="@color/card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shine Bright!"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffd600"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thank the Sun for every sunny day and all the life on Earth!"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnShareSun"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Share"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:background="@drawable/card_bg"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</ScrollView>